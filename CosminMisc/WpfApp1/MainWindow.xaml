<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="370" Margin="21,39,0,0" VerticalAlignment="Top" Width="360"
                    >
            <Button x:Name="Button1" Content="Download" Width="100" Click="Button_Click" Margin="130,0"/>
            <TextBox x:Name="TextBox1" Height="315" TextWrapping="Wrap" Margin="0,0,10,0" AcceptsReturn="True" AutoWordSelection="True"/>
            <Button x:Name="btnClear1" Content="Clear" Margin="0,0,10,0" Click="BtnClear1_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="355" Margin="404,43,0,0" VerticalAlignment="Top" Width="359">
            <Button x:Name="Button2" Content="Button" Click="Button2_Click" Margin="0,0,236,0"/>
            <TextBox x:Name="TextBox2" Height="311" TextWrapping="Wrap" Margin="0,0,10,0" AcceptsReturn="True" AutoWordSelection="True"/>
        </StackPanel>

    </Grid>
</Window>
